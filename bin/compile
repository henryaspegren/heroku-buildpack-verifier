#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

# set a key by adding the VERIFIER_KEY to the ENVIR_DIR
echo '-----> Looking for VERIFIER_KEY and VERIFIER_COMMAND in ENVIR_DIR'

# if no VERIFIER_KEY is found the build will be failed
if [ -f $3/VERIFIER_KEY && -f $3/VERIFIER_COMMAND ]; then
  key=$(cat $3/VERIFIER_KEY)
  cmnd=$(cat $3/VERIFIER_COMMAND)
  echo "-----> Set key to $key set command to $cmnd"
else
  echo "-----> Environment variables not found. Build failed."
  exit 1
fi

echo "-----> Searching SHORTLOG for key to authorize deployment"

# if SHORTLOG does not contain the key, abort the build
if grep -q "$key" $3/VERIFIER_COMMAND; then
  echo "       Key match found in most recent two git commits. Production build authorized"
  exit 0

else
  echo "       Most recent two commits lack the required key to push to production. Build failed"
  exit 1
fi

